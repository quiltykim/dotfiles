# Tint2 config file
# Generated by tintwizard (http://code.google.com/p/tintwizard/)
# For information on manually configuring tint2 see http://code.google.com/p/tint2/wiki/Configure

# To use this as default tint2 config: save as $HOME/.config/tint2/tint2rc

# Background definitions
# ID 1
rounded = 0
border_width = 1
background_color = #21323C 50
border_color = #21323C 100

# ID 2
rounded = 3
border_width = 0
background_color = #000000 0
border_color = #000000 0

# ID 3
rounded = 1
border_width = 0
background_color = #000000 0
border_color = #000000 0

# Panel
panel_monitor = 1
panel_position = bottom center horizontal
panel_size = 100% 24
panel_margin = 20 10
panel_padding = 0 0 0
panel_dock = 0
wm_menu = 0
panel_layer = normal
panel_background_id = 1

# Panel Autohide
autohide = 0
autohide_show_timeout = 0.0
autohide_hide_timeout = 0.0
autohide_height = 0
strut_policy = follow_size

# Taskbar
taskbar_mode = multi_desktop
taskbar_padding = 3 3 3
taskbar_background_id = 0
taskbar_active_background_id = 0

# Tasks
urgent_nb_of_blink = 7
task_icon = 0
task_text = 1
task_centered = 1
task_maximum_size = 140 32
task_padding = 3 7
task_background_id = 3
task_active_background_id = 2
task_urgent_background_id = 0
task_iconified_background_id = 0

# Task Icons
task_icon_asb = 100 0 0
task_active_icon_asb = 100 0 0
task_urgent_icon_asb = 100 0 0
task_iconified_icon_asb = 100 0 0

# Fonts
task_font = play Bold 10
task_font_color = #ECEDEE 100
task_active_font_color = #A3B8FF 100
task_urgent_font_color = #BB0000 100
task_iconified_font_color = #909090 100
font_shadow = 0

# System Tray
systray = 1
systray_padding = 10 0 7
systray_sort = ascending
systray_background_id = 0
systray_icon_size = 18
systray_icon_asb = 100 0 0

# Clock
time1_format = %H:%M
time1_font = K22 Plural 19
# time2_format = %a %d %b
# time2_font = Open Sans Semi-Bold 10
clock_font_color = #ECEDEE 100
clock_padding = 12 0
clock_background_id = 0

# Tooltips
tooltip = 0
tooltip_padding = 0 0
tooltip_show_timeout = 0
tooltip_hide_timeout = 0
tooltip_background_id = 0
tooltip_font = Sans 12
tooltip_font_color = #FFFFFF 100

# Mouse
mouse_middle = close
mouse_right = iconify
mouse_scroll_up = toggle
mouse_scroll_down = iconify

# Battery
battery = 0
battery_low_status = 20
battery_low_cmd = notify-send "battery low"
battery_hide = 90
bat1_font = Sans 7
bat2_font = Sans 0
battery_font_color = #555555 100
battery_padding = 3 0
battery_background_id = 1

# End of config 
